{
    "compilerOptions": {
        "target": "ES2016",// set JavaScript version
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "./dist",
        "moduleResolution": "node",
        "baseUrl": "src",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
